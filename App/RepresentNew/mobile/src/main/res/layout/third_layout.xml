<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/niceblue">

    <TextView
        android:layout_width="300dp"
        android:layout_height="60dp"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:id="@+id/textView6"
        android:gravity="center|top"
        android:textColor="#060af7"
        android:background="#ffffff"
        android:layout_gravity="right"
        android:textSize="50dp"
        android:text="Bill Nelson"
        android:layout_below="@+id/imageView4"
        android:layout_centerHorizontal="true" />
    <ImageView
        android:layout_width="220dp"
        android:layout_height="160dp"
        android:id="@+id/imageView4"
        android:src="@drawable/senatebillnelson"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />
    <ImageView
        android:layout_width="220dp"
        android:layout_height="160dp"
        android:id="@+id/imageView5"
        android:src="@drawable/infobillnelson"
        android:layout_below="@+id/textView6"
        android:layout_alignStart="@+id/textView10"
        android:layout_alignEnd="@+id/textView6" />


    <TextView
        android:layout_width="300dp"
        android:layout_height="30dp"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:id="@+id/textView10"
        android:gravity="center|top"
        android:textColor="#000006"
        android:background="#ffffff"
        android:layout_gravity="right"
        android:textSize="20dp"
        android:text="Committees Serving:"
        android:layout_below="@+id/textView11"
        android:layout_alignStart="@+id/textView11" />

    <TextView
        android:layout_width="300dp"
        android:layout_height="30dp"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:id="@+id/textView11"
        android:gravity="center|top"
        android:textColor="#000006"
        android:background="#ffffff"
        android:layout_gravity="right"
        android:textSize="20dp"
        android:text="End of Term: January 3rd, 2019"
        android:layout_below="@+id/textView6"
        android:layout_centerHorizontal="true" />

    <TextView
        android:layout_width="300dp"
        android:layout_height="32dp"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:id="@+id/textView12"
        android:gravity="center|top"
        android:textColor="#000006"
        android:background="#ffffff"
        android:layout_gravity="right"
        android:textSize="16dp"
        android:text="Recent Bills Sponsored"
        android:layout_alignStart="@+id/imageView5"
        android:layout_below="@+id/imageView5" />

    <ImageView
        android:layout_width="250dp"
        android:layout_height="160dp"
        android:id="@+id/imageView7"
        android:src="@drawable/nelsonbillsact"
        android:layout_below="@+id/imageView5"
        android:layout_alignEnd="@+id/textView12"
        android:layout_alignStart="@+id/textView12" />

    <TextView
        android:layout_width="300dp"
        android:layout_height="30dp"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:id="@+id/textView13"
        android:gravity="center|top"
        android:textColor="#000006"
        android:background="#ffffff"
        android:layout_gravity="right"
        android:textSize="20dp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true" />

</RelativeLayout>
