<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:background="@drawable/patriotismcompressor"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"

    tools:context="com.example.matthewturk.represent.MainActivity"
    tools:showIn="@layout/activity_main">


    <Button
        android:layout_width="120dp"
        android:layout_height="45dp"
        android:text="@string/zip_code"
        android:id="@+id/button"
        android:background="#0fbf1e"

        android:layout_marginTop="157dp"
        android:layout_below="@+id/textView"
        android:layout_centerHorizontal="true" />

    <Button
        android:layout_width="170dp"
        android:layout_height="45dp"
        android:text="@string/current_location"
        android:id="@+id/button2"
        android:layout_marginTop="100dp"
        android:background="#0fbf1e"
        android:onClick="getOtherView"
        android:layout_below="@+id/button"
        android:layout_centerHorizontal="true" />

    <TextView
        android:layout_width="181dp"
        android:layout_height="30dp"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="        Represent!"
        android:id="@+id/textView"
        android:background="#0fbf1e"
        android:layout_alignParentTop="true"
        android:layout_alignStart="@+id/imageView" />

    <ImageView
        android:layout_width="200dp"
        android:layout_height="100dp"
        android:id="@+id/imageView"
        android:src="@drawable/preseagle"
        android:layout_below="@+id/textView"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="46dp" />

    <EditText
        android:layout_width="100dp"
        android:layout_height="50dp"
        android:id="@+id/editText"
        android:layout_below="@+id/button"
        android:layout_centerHorizontal="true" />

</RelativeLayout>
